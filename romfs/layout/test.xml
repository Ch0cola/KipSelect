<?xml version="1.0" encoding="utf-8" standalone="no"?>
<scene>
  <size> <!--Scene Size-->
    <x>1280</x> <!--Width-->
    <y>720</y> <!--Height-->
  </size>
  <backgroundColor> <!--Backround Color-->
    <red>0</red> <!--Red-->
    <green>0</green> <!--Green-->
    <blue>0</blue> <!--Blue-->
  </backgroundColor>
  <objects>
    <text id="testText"> <!--Text Object Example-->
      <static>true</static> <!--A Static Object Is Never Rerendered-->
      <position>
        <x>0</x> <!--X Posistion-->
        <y>0</y> <!--Y Posistion-->
        <centerType>0</centerType> <!--Center Type (0 = Top Left, 1 = Top Right, 2 = Bottom Left, 3 = Bottom Right)-->
      </position>
      <font>romfs:/font/bahnschrift.ttf</font> <!--Path To Font File-->
      <size>25</size> <!--Text Size-->
      <wrap>0</wrap> <!--Wrap Pixel Count (0 Means None)-->
      <text>This Is A Test</text> <!--Displayed Text-->
    </text>
    <blit id="testBlit"> <!--Dynaimic Blit Example-->
      <static>false</static> <!--A Static Object Is Never Rerendered-->
      <position>
        <x>0</x> <!--X Posistion-->
        <y>0</y> <!--Y Posistion-->
        <centerType>0</centerType> <!--Center Type (0 = Top Left, 1 = Top Right, 2 = Bottom Left, 3 = Bottom Right)-->
      </position>
      <textures> <!--All Textures For The Blit Object-->
        <texture id="gray"> <!--Each Texture Needs It's Own Id-->
          <path>romfs:/png/detail/detail_gray.png</path> <!--As Well As A Path To A Texture-->
        </texture>
        <texture id="purple"> <!--Each Texture Needs It's Own Id-->
          <path>romfs:/png/detail/detail_purple.png</path> <!--As Well As A Path To A Texture-->
        </texture>
      </textures>
      <textureSelected>gray</textureSelected> <!--Selected Texture-->
    </blit>
    <animation id="testAnimation"> <!--Animation Object Example-->
      <static>false</static> <!--A Static Object Is Never Rerendered-->
      <position>
        <x>0</x> <!--X Position-->
        <y>0</y> <!--Y Position-->
        <centerType>0</centerType> <!--Center Type (0 = Top Left, 1 = Top Right, 2 = Bottom Left, 3 = Bottom Right)-->
      </position>
      <enabled>true</enabled> <!--Wether The Animation Is Enabled-->
      <fps>30</fps> <!--Frames Per Second-->
      <textures> <!--Textures Used By The Animation-->
        <texture id="0"> <!--Must Be Numbered In Order-->
          <path>romfs:/png/detail/detail_gray.png</path> <!--Still Needs A Path-->
        </texture>
        <texture id="1"> <!--Must Be Numbered In Order-->
          <path>romfs:/png/detail/detail_purple.png</path> <!--Still Needs A Path-->
        </texture>
      </textures>
      <textureSelected>0</textureSelected> <!--Texture Id To Start At-->
    </animation>
  </objects>
</scene>